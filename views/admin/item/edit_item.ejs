<div class="tab-pane fade show active" id="editItem" role="tabpanel" aria-labelledby="profile-tab">
  <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="modal-body">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Title..." value="<%= item.title %>" required>
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="text" class="form-control" id="price" name="price" value="<%= item.price %>" placeholder="Price..." required>
      </div>
      <div class="form-group">
        <label for="service">Service</label>
        <select name="serviceId" class="form-control" id="">
          <option value="<%= item.serviceId._id %>">---<%= item.serviceId.name %>---</option>
          <% for(let i = 0 ; i < service.length ; i++) { %>
          <option value="<%= service[i].id %>"><%= service[i].name %></option>
          <% } %>
        </select>
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        <input type="file" class="form-control" name="image" multiple>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="10" class="form-control">
          <%= item.description %>
        </textarea>
      </div>
    </div>
   
    <button type="submit" class="btn btn-primary">Save</button>
  
  </form>
</div>